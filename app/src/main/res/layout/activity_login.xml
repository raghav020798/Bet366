<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.raghav.bet366.SignupActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bet"
        android:textColor="@color/colorAccent"
        android:textSize="65sp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/auto1"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="65sp"
        android:text="365 "
        android:background="@drawable/strike_off"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="42dp"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="65sp"
        android:text="366 "
        android:textColor="@color/colorAccent"
        android:id="@+id/textView3"
        android:layout_marginTop="61dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <AutoCompleteTextView

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="#FFF"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:id="@+id/auto1"
        android:textColor="#fff"
        android:maxLines="1"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/auto2" />

    <AutoCompleteTextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:maxLines="1"
        android:textColor="#fff"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ic_lock"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:id="@+id/auto2"
        android:layout_below="@+id/auto1"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:text="LOGIN"
        android:textColor="@color/colorAccent"
        android:id="@+id/button"
        android:layout_below="@+id/auto2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not a member? Sign up now."
        android:textColor="#fff"
        android:textSize="15sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:id="@+id/notAmember"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />

</RelativeLayout>
